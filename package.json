{
  "name": "ts-nodejs-tp",
  "version": "1.0.0",
  "description": "Node.js TP written in TypeScript",
  "main": "app.js",
  "author": "Lenzotti Romain",
  "license": "ISC",
  "scripts": {
    "build": "npm run tsc:compile",
    "bower:install": "bower install",
    "postinstall": "npm run build",
    "tslint": "tslint ./*.ts ./src/*.ts",
    "test": "mocha --reporter spec --check-leaks --bail test/",
    "test:cov": "istanbul cover -x \"examples/**\" node_modules/mocha/bin/_mocha -- --reporter dot --check-leaks test/ && npm run test:remap",
    "test:remap": "./node_modules/.bin/remap-istanbul -i coverage/coverage.json -o coverage/lcov-report -t html",
    "test:travis": "istanbul cover node_modules/mocha/bin/_mocha --report lcovonly -- --reporter spec --check-leaks test/",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "tsc:compile": "tsc --project tsconfig.json",
    "start": "bower install && concurrently \"npm run tsc:w\" \"nodemon app.js --ignore *.ts\""
  },
  "dependencies": {
    "@types/express": "^4.0.34",
    "@types/mongoose": "^4.6.2",
    "@types/socket.io": "^1.4.27",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "method-override": "^2.3.5",
    "ejs": "^2.4.2",
    "express": "^4.14.0",
    "express-session": "^1.13.0",
    "mongoose": "^4.5.2",
    "morgan": "^1.7.0",
    "serve-static": "^1.11.1",
    "socket.io": "^1.4.8",
    "source-map-support": "^0.4.1",
    "ts-httpexceptions": "^2.1.2"
  },
  "devDependencies": {
    "@types/chai": "^3.4.32",
    "@types/mocha": "^2.2.31",
    "@types/superagent": "^2.0.34",
    "@types/supertest": "^1.1.30",
    "bower": "^1.7.9",
    "chai": "^3.5.0",
    "istanbul": "^0.4.2",
    "mocha": "^3.1.2",
    "remap-istanbul": "^0.7.0",
    "source-map-support": "^0.4.1",
    "supertest": "^2.0.1",
    "tslint": "3.15.1",
    "typescript": "^2.0.10"
  }
}
